#! /bin/bash

# Apply commands to each directory detected by pacta-locate

# $1 a command passed as a single string

here=$(pwd)
for repo in $(pacta-locate)
do
    echo "$(basename ${repo}):"
    # Work here -------------------------------------------
    cd $repo
    git fetch && git status && git log --oneline | head -1
    # -----------------------------------------------------
    echo --
    echo
done
cd $here
exit 0
